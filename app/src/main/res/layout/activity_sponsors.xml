<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.epicodus.breakthecode.ui.SponsorsActivity"
                android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Sponsor"
        android:id="@+id/nextSponsorButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionLabel"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/nextSponsorButton"
        android:layout_centerHorizontal="true"
        android:text="CrowdCompass is the world&apos;s largest developer of mobile event apps and conference apps."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crowd Compass"
        android:id="@+id/nameLabel"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/descriptionLabel"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sponsorImage"
        android:src="@drawable/crowdcompass_logo"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
